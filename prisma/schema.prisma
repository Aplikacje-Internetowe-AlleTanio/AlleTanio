// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id
  username    String   @unique
  pwdhash     String
  roleId      Int
  createdDate DateTime
}

model Address {
  id         Int    @id @default(autoincrement())
  name       String
  street     String
  number     Int
  postalCode String
  city       String
  userId     String
}

model Product {
  id           Int     @id @default(autoincrement())
  addedBy      String
  name         String
  description  String
  price        Float
  fastDelivery Boolean
}

model Rating {
  id          Int      @id @default(autoincrement())
  rating      Int
  comment     String
  addedBy     String
  productId   Int
  createdDate DateTime @default(now())
}

model Message {
  id         Int      @id @default(autoincrement())
  fromUserId String
  toUserId   String
  title      String
  content    String
  dateSent   DateTime @default(now())
}

model Complaint {
  id       Int      @id
  orderId  Int
  content  String
  refund   Boolean  @default(false)
  dateSent DateTime @default(now())
}

model Order {
  id                Int      @id @default(autoincrement())
  userId            String
  orderTime         DateTime @default(now())
  productId         Int
  deliveryAddressId Int
}

model Report {
  id           Int            @id @default(autoincrement())
  productId    Int
  reportedBy   String
  content      String
  dateReported DateTime       @default(now())
}
